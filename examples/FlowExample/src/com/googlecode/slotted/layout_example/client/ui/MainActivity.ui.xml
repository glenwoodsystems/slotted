<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:DockLayoutPanel >
        <g:west size="150">
            <g:VerticalPanel ui:field="menuPNL" addStyleNames="{style.menuPNL}"/>
        </g:west>
        <g:center>
            <g:SimplePanel ui:field="slotPNL" addStyleNames="{style.slotPNL}"/>
        </g:center>
    </g:DockLayoutPanel>

    <ui:style>
        .menuPNL {
            background: #e1e1e1;
            border-left: 1px solid gray;
            width: 100%;
            height: 100%;
        }

        .slotPNL {
            padding: 10px;
        }
    </ui:style>

</ui:UiBinder>